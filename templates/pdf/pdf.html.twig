
{% block body %}
    <div class="container" >

        <div class='col-xs-12'>
            {% set numcom=commandes[0].num_commande %}
            {% set first=1 %}
            {% set total=0 %}
            {% for produit in commandes %}
                {%if produit.est_valid == 1 %}
                    {% set valid="Commande validée" %}
                {%else%}
                    {% set valid="Commande en attende de validation" %}
                {%endif %}

                {% if first ==1 %}
                    <div class="col-xs-9 numcommande">
                        <div class="col-xs-3" style="margin-left: 1%; margin-bottom: 20px;"> <strong>Numéro de commande : {{commandes[0].num_commande }}</strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  Date d'achat : {{ produit.date|date('m-d-Y')|e }} &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; {{valid}} </div>
                        {% set first=0 %}
                    {%endif%}   
                    {% if numcom == produit.num_commande|e %}
                        <div class="col-xs-3 blockprodcommande" style="margin-bottom: 90px">
                            <span style="position: absolute; margin-bottom:50px;" ><a style='color:#8B4513;' href="/pageproduit/{{produit.id_produit.getId()|e}}">{{ produit.id_produit.getNom()|e }}</a></span>
                            <br>
                            <span style="position: absolute;"> <a href="/pageproduit/{{produit.id_produit.getId()|e}}"><img src="{{ produit.id_produit.getPhoto()|e }}" style=" width:80px; height:80px;"/></a></span>
                            <span class='descriptprodcom' style="position: absolute; margin-left: 90px;">Quantité : {{ produit.quantite|e }}&nbsp; |&nbsp; Prix : {{ produit.prix|e }}€ &nbsp;| &nbsp;Prix unitaire : {{ produit.id_produit.getPrix()|e }}€ </span>
                            {% set numcom=produit.num_commande|e%}
                        </div>

                    {%endif%}
                    {% set total = total+produit.prix|e%}
                {%endfor%}
                <span>Total : {{total}}€</span>
            </div>
        </div>
        {#        {%endif%}#}
    </div>

{% endblock body %}